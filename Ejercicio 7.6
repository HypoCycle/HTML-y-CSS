<!-- CSS -->

@import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap');

* {
    font-family: 'Ubuntu', sans-serif;
}

.cuerpo {
    background-color: #161717;
}

.container {
    color: white;
    
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    width: 350px;
}

.buttons {
    align-self: flex-start;
    display: flex;
    gap: 20px;
}
.google-btn {
    
    background-color: #1a73e8;
    border: none;
    border-radius: 5px;
    height: 40px;
    display: flex;
    align-items: center;
    padding: 2px;    
    cursor: pointer;
    padding: ;
}

.google-btn:hover {
    opacity: 0.6;
}

.google-btn picture {
    width: 36px;
    height: 36px;
    background-color: white;
    border-radius: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.google-btn picture img {
    width: 75%;

}

.google-btn span {
    color: white;
    padding: 15px;
    font-weight: 500;
}

.twitter-btn {
    color: #bbb;
    background-color: #eee;
    border: none;
    width: 40px;
    border-radius: 5px;
    cursor: pointer;
}

.twitter-btn:hover {
    background-color: #ddd;
}

.separator {
    margin: auto;
    display: flex;
    width: 390px;
    gap: 15px;
}

.separator hr {
    display: flex;
    flex-grow: 1;
    border: none;
    border-top: 1px solid #ccc;
}

.section-inputs {
    display: flex;
    gap: 10px;
    width: 100%;
    flex-direction: column;
    justify-content: center;
    width: 350px;
}

label {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 5px;
}

label span {
    font-weight: 700;
}

label input {
    width: 100%;
    background-color: #212121;
    border: none;
    padding: 10px 20px;
    border-radius: 10px;
    outline: none;
    font-size: 14pt;
    transition: background-color 0.2s;
}

form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
}


label input:hover {
    background-color: #454045;
    border: solid 1px #f3f3f4;
    box-shadow: 0 0 4px #255a9e;
}

label input:focus {
    background-color: #454045;
    border: solid 1px #f3f3f4;
    box-shadow: 0 0 4px #284974;
}

.checkbox-label{
    display: flex;
    box-shadow: white;
    flex-direction: row;
}

.checkbox-label input[type="checkbox"] {
    width: 15px;
    margin-top: 20px;
    margin-bottom: 20px;
}


.checkbox-label span {
    font-weight: 500;
    margin-top: 20px;
    margin-bottom: 20px;
}


.submit-btn {
    display: flex;
    text-align: center;
    justify-content: center;
    background-color: #1a73e8;
    color: white;
    font-size: 14;
    font-weight: 500;
    text-align: center;
    padding: 10px;
    border: none;
    border-radius: 10px;
    width: 390px;
}

.submit-btn:hover {
    opacity: 0.75;
}
